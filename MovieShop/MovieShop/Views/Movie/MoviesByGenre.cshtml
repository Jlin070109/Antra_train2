@{
}
@using ApplicationCore.Entities
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ApplicationCore.Entities.Movie>
@{
    ViewData["action"] = "MoviesByGenre";
}

<div class="container">
    <div class="row row-cols-auto">
        <div class="col"><partial name="_SortMethod" /></div>
        <div class="col"><partial name="_SortOrder" /></div>
        <div class="col"><partial name="_GenreList" /></div>
    </div>
    <hr />
    <div class="row row-cols-auto">
        @foreach (Movie item in Model)
        {
            <div class="col">
                <partial name="_MovieIndexCard" model=@item />
            </div>
        }
    </div>
    <partial name ="_MoviePagination" />
</div>