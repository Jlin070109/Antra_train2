@using ApplicationCore.Entities
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ApplicationCore.Entities.Cast
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    <div class="row row-cols-auto">
        <div class="col">
            <a href="@Model.TmdbUrl" target="_blank">
                <img src="@Model.ProfilePath" alt="@Model.Name"/>
            </a>
        </div>
        <div class="col">
            <p class="fw-bold fs-1">@Model.Name</p>
            <p>
                Gender: @if(int.Parse(Model.Gender) == 1)
                {
                    <span>Female</span>
                }
                else
                {
                    <span>Male</span>
                }
            </p>
            <p>Tmdb Profile: <a href="@Model.TmdbUrl" target="_blank">@Model.TmdbUrl</a></p>
        </div>
    </div>
    <br />
    <hr />
    <p class="fs-4">Movies @Model.Name acted in</p>
    <div class="row row-cols-auto">
        @foreach(MovieCast movieCast in Model.MovieCasts.OrderByDescending(x=>x.Movie.ReleaseDate))
        {
            <div class="col">
                <partial name="_MovieDetailCard" model="@movieCast.Movie"/>
            </div>
        }
    </div>
</div>