@using ApplicationCore.Entities
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<ApplicationCore.Entities.Cast>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container ">
    <div class="row row-cols-auto">
        @foreach (Cast cast in Model)
        {
            <div class="col">
                <partial name="_CastIndexCard" model=@cast />
            </div>
        }
    </div>
    <div class="row">
        <nav aria-label="Cast_Index_Page">
            <ul class="pagination justify-content-center">
                @if ((int)ViewData["page"] != 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="Cast"
                           asp-route-page=1>
                            <i class="bi bi-chevron-double-left"></i>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="Cast"
                           asp-route-page=@((int)ViewData["page"] - 1)><i class="bi bi-chevron-left"></i></a>
                    </li>
                    @if ((int)ViewData["page"] != 2)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-controller="Cast"
                               asp-route-page=@((int)ViewData["page"] - 2)>@((int)ViewData["page"] - 2)</a>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="Cast"
                           asp-route-page=@((int)ViewData["page"] - 1)>@((int)ViewData["page"] - 1)</a>
                    </li>

                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" asp-action="Index" asp-controller="Cast"
                           asp-route-page=1>
                            <i class="bi bi-chevron-double-left"></i>
                        </a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" asp-action="Index" asp-controller="Cast"
                           asp-route-page=@((int)ViewData["page"] - 1)><i class="bi bi-chevron-left"></i></a>
                    </li>
                }
                <li class="page-item active">
                    <a class="page-link" asp-action="Index" asp-controller="Cast"
                       asp-route-page=@((int)ViewData["page"])>@((int)ViewData["page"])</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-controller="Cast"
                       asp-route-page=@((int)ViewData["page"] + 1)>@((int)ViewData["page"] + 1)</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-controller="Cast"
                       asp-route-page=@((int)ViewData["page"] + 2)>@((int)ViewData["page"] + 2)</a>
                </li>
                @if ((int)ViewData["page"] <= 2)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="Cast"
                           asp-route-page=@((int)ViewData["page"] + 3)>@((int)ViewData["page"] + 3)</a>
                    </li>
                    @if ((int)ViewData["page"] == 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-controller="Cast"
                               asp-route-page=@((int)ViewData["page"] + 4)>@((int)ViewData["page"] + 4)</a>
                        </li>
                    }
                }
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-controller="Cast" asp-route-page=@((int)ViewData["page"] + 1))><i class="bi bi-chevron-right"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</div>